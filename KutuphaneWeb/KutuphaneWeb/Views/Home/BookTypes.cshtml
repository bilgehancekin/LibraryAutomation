@model PagedList<KutuphaneWeb.Models.BookType>
@{
    ViewBag.Title = "BookTypes";
}

<div class="row">
    <div class="col-lg-12">
        <h2>Kitap Türleri</h2>
        <hr>
        <a href="@Url.Action("AddBookType")" class="btn -btn-lg btn-primary">Kitap Türü Ekle</a>
        <hr>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Adı</th>
                        <th>Açıklama</th>
                        <th>Seçenekler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (KutuphaneWeb.Models.BookType booktype in Model)
                    {
                        <tr>
                            <td>@booktype.Name</td>
                            <td>@booktype.Explanation</td>
                            <td style="text-align:center;"><a href="@Url.Action("EditBookType", new {id=booktype.Id })" class="glyphicon glyphicon-edit"> </a> | <a href="@Url.Action("DeleteBookType", new {id=booktype.Id })"><i class="glyphicon glyphicon-remove"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("BookTypes", new { page }), PagedListRenderOptions.Classic)
        </div>
    </div>
</div>
<!-- /.row -->
@section scripts{
    <!-- Morris Charts JavaScript -->
    <script src="js/plugins/morris/raphael.min.js"></script>
    <script src="js/plugins/morris/morris.min.js"></script>
    <script src="js/plugins/morris/morris-data.js"></script>
}
