@model PagedList<KutuphaneWeb.Models.Borrow>
@{
    ViewBag.Title = "Borrows";
}

<div class="row">
    <div class="col-lg-12">
        <h2>Emanetler</h2>
        <hr>
        <a href="@Url.Action("AddBorrow")" class="btn -btn-lg btn-primary">Emanet Ekle</a>
        <hr>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Kitap Adı</th>
                        <th>Emanet Alan Okuyucu</th>
                        <th>Emanet Verilme Tarihi</th>
                        <th>Tahmini Teslim Alma Tarihi</th>
                        <th>Teslim Alma Tarihi</th>
                        <th>Seçenekler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (KutuphaneWeb.Models.Borrow borrow in Model)
                    {
                        <tr>
                            <td>@borrow.Book.Name</td>
                            <td>@borrow.Member.NameSurname</td>
                            <td>@borrow.BorrowDate</td>
                            <td>@borrow.EstimatedReturnDate</td>
                            <td>@borrow.ReturnDate</td>
                            <td style="text-align:center;"><a href="@Url.Action("EditBorrow", new {id=borrow.Id })"><i class="glyphicon glyphicon-edit"></i></a> | <a href="@Url.Action("DeleteBorrow", new {id=borrow.Id })"><i class="glyphicon glyphicon-remove"></i></a> | <a href="@Url.Action("RecieveBook", new {id=borrow.Id })"><i class="glyphicon glyphicon-saved"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Borrows", new { page }), PagedListRenderOptions.Classic)
        </div>
    </div>
</div>
<!-- /.row -->
